.modal{"data-target": "modal.modal"}
  .modal-background
  .modal-content
    .columns.is-centered.is-marginless{ 'data-target': 'modal.modalContent' }
      .column.is-11
        .box{'data-controller': 'contact-concierge'}
          %h3= t('labels.contact_concierge')
          = form_for(:professional_contact, url: professional_contact_path, remote: true, html: {'data-action': 'ajax:success->contact-concierge#handleResponse ajax:error->contact-concierge#handleError'}) do |f|
            .field
              = f.hidden_field :contact_concierge, value: true
              = f.label :phone_number, t('generic.phone_number'), class: 'label'
              = f.text_field :phone_number, class: 'input', placeholder: t('generic.phone_number'), value: current_user.phone_number, minlength: 10, maxlength: 50, required: true
              = f.text_area :body, class: 'textarea has-fixed-size input', minlength: 1, placeholder: t('placeholders.leave_a_comment'), maxlength: 1000, required: true
            .field
              = f.submit t('labels.contact_concierge'), class: 'button is-primary is-fullwidth'

            %p.help.is-success.is-hidden{'data-target': 'contact-concierge.infoTag'}
